<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/listPreferredItemHeight"
    android:gravity="center_vertical"

    android:orientation="horizontal">
    <TextView
        android:layout_width="@dimen/small_margin"
        android:layout_height="wrap_content"
        android:id="@+id/textLeft"
        android:layout_marginLeft="@dimen/small_margin"
        android:layout_marginRight="@dimen/small_margin"
        android:gravity="center_horizontal"
        style="@style/ListSubText"
        android:textColor="@color/body_text_1_positive"
        tools:text="22/01/15"/>
    <LinearLayout
        android:layout_marginRight="@dimen/small_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView android:id="@+id/text1"	
	    style="@style/ListHeadingText"
 		 android:layout_width="wrap_content"
 		 android:layout_height="wrap_content"
 		 android:singleLine="false"
 		 tools:text="Heading text"/>

     <TextView android:id="@+id/text2"	
         style="@style/ListSubText"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"

         tools:text="Details text"/>
        </LinearLayout>
</LinearLayout>
